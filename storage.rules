rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profiles/{userId}/{allPaths=**} {
      // Allow anybody to read profile images
      allow read: if true;
      // Allow users to upload/modify only their own profile directory
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /visits/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
